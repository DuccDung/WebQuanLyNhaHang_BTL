@model IEnumerable<WebQuanLyNhaHang.Models.Product>

@{
    Layout = "Header_Left_Layout";
}
<style>
    td{
        vertical-align:middle;
        text-align:center;
    }

    .table td, .table th {
        padding: .75rem;
        vertical-align: top;
        border-top: 1px solid #eceeef;
        text-align: center;
    }
</style>

<div class="content-wrapper">
    <div class="card">
        <div class="card-header">
            <h5 class="card-header-text">Danh Sách Sản Phẩm</h5>
        </div>
        <div class="card-block">
            <div class="row">
                <div class="col-sm-12 table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PathPhoto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TenSanPham)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GiaTien)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SoLuong)
                                </th>
                                <th>
                                    Chỉnh Sửa
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.PathPhoto" alt="Hình ảnh ví dụ" style="width:80px; height:80px; ">
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSanPham)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.GiaTien)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>

                                    <td>
                                        <a class="btn btn-info waves-effect waves-light" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                                        <a class="btn btn-disable disabled" asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                                        <a class="btn btn-danger waves-effect waves-light" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                                    </td>
                                </tr>
                            }
                            <a asp-controller="Products" asp-action="Create" class="btn btn-success waves-effect waves-light">Thêm Sản Phẩm</a>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
