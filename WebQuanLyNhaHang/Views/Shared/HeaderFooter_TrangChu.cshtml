<script>
    $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
            items: 1,                 // Số lượng ảnh hiển thị cùng lúc
            loop: true,               // Lặp lại carousel khi hết ảnh
            autoplay: true,           // Tự động chuyển slide
            autoplayTimeout: 3000,    // Thời gian chuyển slide (3 giây)
            autoplayHoverPause: true, // Dừng khi người dùng rê chuột vào
            nav: true,                // Hiển thị nút điều hướng
            dots: true                // Hiển thị điểm đánh dấu
        });
    });
