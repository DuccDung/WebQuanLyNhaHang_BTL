@{
    Layout = "HeaderFooter_TrangChu";
}
@model WebQuanLyNhaHang.ViewModel.ViewModelMenu


<main>
    <div id="collection">
        <div class="collection_menu_wrap">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 stikySidebar">
                        <aside class="sidebar_menu">
                            <!--khi man hinh to-->
                            <ul class="hidden-sm hidden-xs">
                                <li>
                                    <a class="menu_scroll_link view_all " href="javascript:void(0)"
                                       data-url="/collections/all">Tất Cả</a>
                                </li>
                                <li>
                                    <a class="menu_scroll_link" href="javascript:void(0)" data-parent-id="103658000"
                                       data-url="/collections/ca-phe">Cà Phê</a>
                                    <ul class="sidebar_menu_lv2">
                                        <li>
                                            <a class="" data-url="/collections/ca-phe-highlight-2"
                                               href="#107337573">Cà Phê Highlight</a>
                                        </li>
                                        <li>
                                            <a class="" data-url="/collections/ca-phe-viet-nam" href="#103658001">
                                                Cà
                                                Phê Việt Nam
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <li>
                                    <a class="menu_scroll_link" href="javascript:void(0)" data-parent-id="107146008"
                                       data-url="/collections/trai-cay-xay-0-c">Trái Cây Xay 0°C</a>
                                    <ul class="sidebar_menu_lv2">
                                        <li>
                                            <a class="" data-url="/collections/trai-cay-xay-0-c"
                                               href="#107146009">Trái Cây Xay 0°C</a>
                                        </li>
                                    </ul>
                                </li>

                            </ul>
                            <!--khi man hinh nho-->
                            <select class="hidden-md hidden-lg" id="menuSelect">
                                <option value="null">Tất cả</option>
                                <option value="#103658000">Cà Phê</option>
                                <option value="#107146008">Trái Cây Xay 0°C</option>

                            </select>
                        </aside>
                    </div>

                    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 border_right_before">
                        <div class="cha block_menu_item loaded" id="107337573" data-parent-target="103658000">
                            @foreach (var category in Model.Categories())
                            {
                                <h3 class="block_menu_item_title">
                                    <span class="line_after_heading section_heading">@category.TenLoaiSanPham</span> @* cate *@
                                </h3>
                                <div class="flex_wrap display_flex menu_lists menu_list_collection">
                                @foreach (var product in Model.FindProductByCate(category.CateId))
                                {
                                   
                                        <div class="Home__menuItem">
                                            <div class="menu_item_image">
                                                <a>
                                                    <img class=" ls-is-cached lazyloaded" style="height: 250px;"
                                                         src="@product.PathPhoto"
                                                         alt="">
                                                </a>
                                                <ul class="labels"></ul>
                                            </div>
                                            <div class="menu_item_info">
                                                <h3>
                                                    <a>@product.TenSanPham</a> @* TenSp *@
                                                </h3>
                                                <div class="price_product_item"> @String.Format("{0:N0}", product.GiaTien)đ</div> @* gia *@
                                            </div>
                                        </div>
                                    
                                }
                                </div>
                            }
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script src="/asset/js/menu_home.js"></script>
